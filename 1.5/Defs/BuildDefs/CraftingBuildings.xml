<Defs>
<ThingDef ParentName="BenchBase" Name="BrokenRim_2x5Bench" Abstract="True">
    <thingClass>Building_WorkTable</thingClass>
    <graphicData>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(7,4)</drawSize>
      <shadowData>
        <volume>(2.9, 0.3, 0.5)</volume>
        <offset>(0, 0, 0)</offset>
      </shadowData>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <fillPercent>0.5</fillPercent>
    <useHitPoints>True</useHitPoints>
    <size>(5,2)</size>
    <designationCategory>BrokenBuilding_Category</designationCategory>
    <passability>PassThroughOnly</passability>
    <pathCost>50</pathCost>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <surfaceType>Item</surfaceType>
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
    <building>
      <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
	  <destroySound>BuildingDestroyed_Metal_Big</destroySound>
    </building>
    <comps>
      <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>
          <li>ToolCabinet</li>
        </linkableFacilities>
      </li>
    </comps>
    <placeWorkers>
      <li>PlaceWorker_ShowFacilitiesConnections</li>
      <li>PlaceWorker_PreventInteractionSpotOverlap</li>
    </placeWorkers>
  </ThingDef>
  <ThingDef ParentName="BrokenRim_2x5Bench">
    <defName>BrokenRimT2Bench</defName>
    <label>Advanced Fabrication Bench</label>
    <description>A crafting bench designed by galaxus during a war. Provides crafting for T2-T3.</description>
    <graphicData>
      <texPath>BrokenRim/Buildings/AdvancedFabricationBench/AdvancedFabricationBench</texPath>
    </graphicData>
	<thingClass>Building_WorkTable</thingClass>
    <costList>
      <Steel>150</Steel>
      <ComponentSpacer>3</ComponentSpacer>
    </costList>
	<comps>
	      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <shortCircuitInRain>true</shortCircuitInRain>
        <basePowerConsumption>350</basePowerConsumption>
      </li>
      <li Class="CompProperties_Flickable"/>
      <li Class="CompProperties_Breakdownable"/>
      <li Class="CompProperties_HeatPusher">
        <compClass>CompHeatPusherPowered</compClass>
        <heatPerSecond>3</heatPerSecond>
      </li>
	  </comps>
    <statBases>
      <WorkToBuild>8000</WorkToBuild>
      <MaxHitPoints>3000</MaxHitPoints>
      <Flammability>0</Flammability>
	  <WorkTableEfficiencyFactor>1</WorkTableEfficiencyFactor>
    </statBases>
	<recipes>
      <li>Make_ComponentIndustrial</li>
      <li>Make_ComponentSpacer</li>
    </recipes>
	<researchPrerequisites>
      <li>BrokenRimMainResearchT2</li>
    </researchPrerequisites>
  </ThingDef>
  
  <WorkGiverDef>
<defName>DoBillsT2Bencg</defName>
<label>fabricate things</label>
<giverClass>WorkGiver_DoBill</giverClass>
<workType>Smithing</workType>
<priorityInType>50</priorityInType>
<fixedBillGiverDefs>
<li>BrokenRimT2Bench</li>
</fixedBillGiverDefs>
<verb>fabricate</verb>
<gerund>fabricating things at</gerund>
<requiredCapacities>
<li>Manipulation</li>
</requiredCapacities>
<prioritizeSustains>true</prioritizeSustains>
</WorkGiverDef>
</Defs>